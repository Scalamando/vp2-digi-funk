{
	"extends": "@vue/tsconfig/tsconfig.web.json",
	"include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"target": "ESNext",
		"lib": ["ESNext", "DOM"],
        "typeRoots": [
            "src/@types",
            "node_modules/@types"
        ]
	},

	"references": [
		{
			"path": "./tsconfig.config.json"
		}
	]
}

